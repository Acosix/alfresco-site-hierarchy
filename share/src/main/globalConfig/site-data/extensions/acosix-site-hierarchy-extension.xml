<?xml version='1.0' encoding='UTF-8' ?>
<extension>
    <modules>
        <module>
            <id>${moduleId} - Site Management Extension</id>
            <description>${project.name}</description>
            <version>${noSnapshotVersion}</version>
            <auto-deploy>true</auto-deploy>

            <customizations>
                <customization>
                    <targetPackageRoot>org.alfresco</targetPackageRoot>
                    <sourcePackageRoot>de.acosix.${moduleId}.customisations</sourcePackageRoot>
                </customization>

                <customization>
                    <targetPackageRoot>org.alfresco.share.pages</targetPackageRoot>
                    <sourcePackageRoot>de.acosix.${moduleId}.customisations.share.header</sourcePackageRoot>
                    <alwaysApply>
                        <webscript>share-header</webscript>
                    </alwaysApply>
                </customization>
            </customizations>
        </module>
    </modules>
</extension>
